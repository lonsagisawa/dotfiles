[color]
bg = #282c34
bg_dark = #21252b
fg = #d7d3cb
fg_dimmed = #3e4452

[bar/default]
modules-left = date powerline_left_dark spacer_light bspwm spacer_light powerline_left_light title powerline_left_dark
modules-right = powerline_right_dark nowplaying powerline_right_light pulseaudio powerline_right_dark wifi network powerline_right_light battery1 battery2  

font-0 = "PowerlineSymbols:pixelsize=16;5"
font-1 = "Hack:pixelsize=10;3"
font-2 = "Noto Sans CJK JP:pixelsize=11;3"
font-3 = "Cica:pixelsize=17;4"

fixed-center = true

height = 30

padding = 0 
module-margin = 0 

dpi-x = 120
dpi-y = 120

background = ${color.bg}
foreground = ${color.fg} 

offset-x = 0
offset-y = 0

enable-ipc = true

[module/bspwm]
type = internal/bspwm

format-background = ${color.bg}

label-focused = %index%
label-focused-foreground = ${color.fg}
label-focused-background = ${color.fg_dimmed}
label-focused-padding = 1

label-occupied = %index%
label-occupied-foreground = ${color.fg}
label-occupied-background = ${color.bg}
label-occupied-padding = 1

label-urgent = %index%!
label-urgent-padding = 1

label-empty = %index%
label-empty-foreground = ${color.fg_dimmed}
label-empty-background = ${color.bg}
label-empty-padding = 1

; Separator in between workspaces
; label-separator = |

[module/title]
type = internal/xwindow
format = <label>
label = %title%
label-maxlen = 20 
format-background = ${color.bg_dark}
format-padding = 1

[module/date]
type = internal/date
date = %b %d %a
time = %H:%M
format = <label>
label = %date% %time%
format-padding = 1
format-background = ${color.bg_dark}

[module/wifi]
type = internal/network
interface = wlp3s0
format-connected =  <label-connected>
format-disconnected = 
format-foreground-disconnected = ${color.fg_dimmed}
label-connected = %essid% %downspeed%
format-connected-background = ${color.bg_dark}
format-disconnected-background = ${color.bg_dark}
format-connected-padding = 1
format-disconnected-padding = 1

[module/network]
type = internal/network
interface = enp0s25
format-connected =  <label-connected>
format-disconnected = 
format-foreground-disconnected = ${color.fg_dimmed}
label-connected = %downspeed%
format-connected-background = ${color.bg_dark}
format-disconnected-background = ${color.bg_dark}
format-connected-padding = 1
format-disconnected-padding = 1

[module/battery1]
