# Ghostty configuration
# For references:
# ghostty +show-config --default --docs | less

### Typography

font-family = JetBrains Mono
font-family = IBM Plex Sans JP

font-feature = zero
font-feature = cv08
font-feature = cv11
font-feature = cv12
# HACK: Unintended Japanese ligatures like 株式会社 workaround
font-feature = -dlig

font-size = 11

# line-height
# 100% = 200% of original
adjust-cell-height = 50%
adjust-cursor-height = 50%

# make underline little bit lower
adjust-underline-position = 2

# Disable hinting for consistent Japanese rendering
freetype-load-flags = no-hinting

### Appearance

theme = catppuccin-macchiato
cursor-text = "#24273a"
cursor-style = block

window-padding-x = 8
window-padding-y = 8
window-padding-balance = true
window-padding-color = extend

# Titlebar/Headerbar color
window-theme = ghostty

### Behavior

resize-overlay-duration = 250ms

shell-integration-features = no-cursor,no-sudo,title
